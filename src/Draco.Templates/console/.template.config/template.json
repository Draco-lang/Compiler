{
    "$schema": "http://json.schemastore.org/template",
    "name": "Draco Console App",
    "shortName": "draco-console",
    "sourceName": "DracoConsole",
    "identity": "Draco.Console",
    "classifications": [
        "Console",
        "Common"
    ],
    "tags": {
        "language": "Draco",
        "type": "project"
    },
    "author": "Draco Language contributors",
    "description": "A project for creating a command-line application with Draco",
    "preferNameDirectory": true,
    "symbols": {
        "framework": {
            "type": "parameter",
            "datatype": "choice",
            "allowMultipleValues": false,
            "choices": [
                {
                    "choice": "net6.0",
                    "displayName": ".NET 6",
                    "description": "Target .NET 6."
                },
                {
                    "choice": "net7.0",
                    "displayName": ".NET 7",
                    "description": "Target .NET 7."
                }
            ],
            "defaultValue": "net7.0",
            "replaces": "{TargetFramework}",
            "displayName": "Target framework",
            "description": "The target framework for the project."
        }
    },
    "primaryOutputs": [
        {
            "path": "./Program.cs"
        },
        {
            "path": "./DracoConsole.dracoproj"
        }
    ]
}
