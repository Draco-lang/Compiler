<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Draco.Compiler.Api\Draco.Compiler.Api.csproj" />
    <PackageReference Include="OmniSharp.Extensions.LanguageServer" Version="0.19.6" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <FilesToCopy Include="$(TargetDir)**\*"/>
    </ItemGroup>

    <Copy
      SourceFiles="@(FilesToCopy)"
      DestinationFolder="$(SolutionDir)Draco.Extension.VsCode\out"
      SkipUnchangedFiles="true" />
  </Target>

</Project>
