<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>11</LangVersion>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.4.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="All" />
    <PackageReference Include="Nullable" Version="1.3.1" PrivateAssets="All" />
    
    <PackageReference Include="Scriban.Signed" Version="5.5.2" PrivateAssets="All" GeneratePathProperty="true" />
    <PackageReference Include="System.Text.Json" Version="7.0.2" PrivateAssets="All" GeneratePathProperty="true" />
  </ItemGroup>

  <!-- Embed all Scriban template files -->
  <ItemGroup>
    <EmbeddedResource Include="Templates\**\*.*">
      <LogicalName>Templates.%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Embed the language server protocol specification -->
  <ItemGroup>
    <EmbeddedResource Include="..\..\external\lsp-specification\**\*.*" Visible="False">
      <LogicalName>Lsp.%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
      <TransformPath>$(TargetDir)\%(EmbeddedResource.RelativeDir)%(EmbeddedResource.Filename)%(EmbeddedResource.Extension)</TransformPath>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Erase '\' vs '/' differences -->
  <ItemGroup>
    <EmbeddedResource Update="@(EmbeddedResource)">
      <LogicalName>$([System.String]::Copy('%(EmbeddedResource.LogicalName)').Replace('/', '.').Replace('\', '.'))</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
  
  <PropertyGroup>
    <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
  </PropertyGroup>

  <!-- Package runtime dependencies -->
  <Target Name="GetDependencyTargetPaths">
    <ItemGroup>
      <TargetPathWithTargetPlatformMoniker Include="$(PkgScriban_Signed)\lib\netstandard2.0\*.dll" IncludeRuntimeDependency="false" />
      <TargetPathWithTargetPlatformMoniker Include="$(PkgSystem_Text_Json)\lib\netstandard2.0\*.dll" IncludeRuntimeDependency="false" />
    </ItemGroup>
  </Target>

</Project>
