<?xml version="1.0" encoding="utf-8" ?>
<Project>
    <PropertyGroup>
        <OutputPath>output\</OutputPath>
        <TargetFramework>netstandard2.0</TargetFramework>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <UsingTask TaskName = "DracoBuildTask"
        AssemblyFile = "..\bin\Debug\netstandard2.0\Draco.ProjectFile.dll"/>

    <Target Name="Build">
        <DracoBuildTask OutputType="$(OutputType)" ProjectDirectory="$(MSBuildProjectDirectory)"/>
    </Target>
</Project>
